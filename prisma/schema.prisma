generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  userType  UserType @default(USER)
  chef      chef?    // Relacionamento opcional com a tabela chef
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model categorias {
  id        Int      @id @default(autoincrement())
  nome      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model mesas {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  seats     Int
  status    Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model chef {
  id               Int      @id @default(autoincrement())
  nome             String
  biografia        String
  cargo            String
  imagem           String
  tempoExperiencia Int
  userId           Int      @unique
  user             users    @relation(fields: [userId], references: [id])
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

enum UserType {
  ADMIN
  USER
  CHEF
}